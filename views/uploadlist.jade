extends layout

block content
    div.uk-grid
        div.uk-width-1-1.uk-clearfix
            div.uk-panel.uk-panel-space.center.uk-width-1-1
                center
                    if (files.length > 0)
                        table.uk-table.uk-table-hover.uk-table-striped.uk-table-condensed
                            tbody
                            each file in files
                                tr
                                    td: a(href="#{file}")= file
                                    td: a(href="/deletefile/#{file}"): i.uk-icon.uk-icon-remove
                    else
                        p No files dog