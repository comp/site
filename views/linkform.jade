extends layout

block content
    div.uk-grid
        div.uk-width-1-1.uk-clearfix
            div.uk-panel.uk-panel-space.center.uk-width-1-1
                center
                    form.uk-form(method="post",action="makelink")
                        label(for="link",style="margin:10px;") Link:
                        input(type="text", name="link", id="link").uk-form-row.uk-form-large.uk-width-1-3
                        br
                        input(type="submit", value="Submit").uk-form-row.uk-form-large.uk-button#submit
